package gui;


import java.awt.*;

import javax.swing.*;


public class ShoppingBasketFrame extends JFrame{
	
	private static final long serialVersionUID = 7026057759618327943L;
	public static final String STRING_PRODUCT_NAME = "Product Name";
	public static final String PRODUCT_QUANTITY = "Product Quantity";
	public static final String PRODUCT_LATEST_PRICE = "Latest Price";
	public static final String BASKET = "Basket";
	public static final String NUMBER_ITEMS = "Number Of Items";
	
	
	
	public ShoppingBasketFrame(){
		
		super("Shopping Basket");
		
		JPanel shoppingPanel = new JPanel();
		
		JButton[] buttonArray = new JButton[]{
				new JButton("Add Product"),
				new JButton("Remove Product"),
				new JButton("Edit Product"),
				new JButton("Clear Basket"),
				new JButton("Save"),
				new JButton("Exit"),
		};
		
		
		for (JButton b : buttonArray) {
			shoppingPanel.add(b);
		}
		
		System.out.println(this.getSize());
		
		this.setSize(700, 700);
		this.setLayout(null);
        this.setTitle("Shopping Basket");
        this.setDefaultCloseOperation(ShoppingBasketFrame.EXIT_ON_CLOSE);
        this.setVisible(true);
        
		this.add(shoppingPanel);
		
		
	}
	
	
	
}
