package ex1;

public class Car extends Object {
	
	private String color;
	private String make;
	private String model;
	private int age; 
	
	// each class has a public method called constructor which is named with the class name.
	
	public Car(String c, String ma, String mo, int a) {
		color = c;
		make = ma;
		model = mo;
		age = a;
	}

	public String toString() {
		return "Color: " + color + "\nMake: " + make + "\nModel: " + model + "\nAge: " + age;
	}
	
	private boolean identify() {
		if(Utilities.getInput("Who Are You?").equals("Alex")){
			return true;
		} else {
			return false;
		}
	}

	public void setColor(String c){
		if (identify() == true ) {
		color = c;
		} else { 
			System.out.println("intruder"); 
			System.exit(0); 
		}
	}

	public void setMake(String ma){
		if (identify()) {
		make = ma;
		} else { 
			System.out.println("intruder"); 
			System.exit(0); 
		}
	}
	
	public void setModel(String mo){
		if (identify()) {
		model = mo;
		} else { 
			System.out.println("intruder"); 
			System.exit(0); 
		}
	}
	
	public void setAge(int a){
		if (identify()) {
		age = a;
		} else { 
			System.out.println("intruder"); 
			System.exit(0); 
		}
	}







} // end of class
