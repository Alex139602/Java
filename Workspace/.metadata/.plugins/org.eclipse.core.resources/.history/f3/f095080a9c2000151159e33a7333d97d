package ex1;

import java.io.*;

public class WriteToFile {

	public static void main(String[] args) throws IOException {
		
		writeToFile();
		
	} // end of main

	private static void writeToFile(int inty) throws IOException {
		try {
			String[] stA = new String[inty];
			String data = "This content will append to the end of the file";
			File filee = new File("javaio-appendfile.log");
			
			if (!filee.exists()){
				filee.createNewFile();
				String path = filee.getPath();
				System.out.println(path);
			}
			
			
			
		} catch ( IOException e) {
			e.printStackTrace();
		}
		
	}
	
	
	

} // end of class
