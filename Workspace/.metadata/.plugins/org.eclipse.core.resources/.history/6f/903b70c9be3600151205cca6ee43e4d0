package starter.Main;

import java.util.ArrayList;

import starter.Vehicle.Vehicle;

public class Program {

	public static void main(String[] args) {
		// Display count
		System.out.printf("Vehicle Count : %d\n\n",0);
		
		// Create ArrayList of Vehicle
		ArrayList<Vehicle> vehicleList = new ArrayList<>();
		// Loop to create 7 vehicles
		
		for (int i = 0; i < 7; i++) {
			vehicleList.add( new Vehicle(55, 1) );
		}
		
		
		// Call accelerate or brake
		
		for ( Vehicle v : vehicleList) {
			
			int randomNum0To70;
			double randNum0To1;
			
			randNum0To1 > 0.5 ? v.accelerate(0) : v.brake(0); ;
		}
		
		// Display details
		
		for (Vehicle vehicle : vehicleList) {
			System.out.println( vehicle.getDetails() );
		}
		
		// Display count again
		
		System.out.printf("Vehicle Count : %d\n\n", vehicleList.size() );
		
	}

}
