package ex1;

public class Quiz {
	public static void main(String[] args){
		
		citiesQuiz();
	} // end of main
	
	
	public static int citiesQuiz() {
		String[] cities = new String[]{"France?","England?", "Holland?", "Germany?", "Sweden?" };
		String[] capitals = new String[]{"Paris", "London", "Amsterdam", "Berlin", "Stockholm" };
		String[] question = new String[cities.length];
		int score = 0;
		for (int i = 0; i < question.length; i++) {
			question[i] = "What is the capital of " + cities[i];
		}
		String userInput;
		for (int i = 0; i < question.length; i++) {
			userInput = Utilities.getInput(question[i]);
			if (userInput.equalsIgnoreCase(capitals[i])) {
				score++;
			}
		}
		Utilities.showMsg("Your score is: " + score + " out of " + 5);
		return score;
	}
	
	public static int mathQuiz() {
		int score = 0;
		String[] mathsQuestions = new String[]{"what is 9 x 4 ?","what is 12 x 3 ?", "what is 37 + 94 ?", "what is 6000 / 12 ?", "what is the cube root of 35937 ?" };
		 
		Utilities.showMsg("Your score is: " + score + " out of " + 5);
		return score;
	}
	
